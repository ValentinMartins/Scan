<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.scan.controller.MainController"
            prefWidth="600" prefHeight="400">

    <center>
        <TableView fx:id="tableDrives">
            <columns>
                <TableColumn fx:id="colName"  text="Drive"/>
                <TableColumn fx:id="colTotal" text="Total Space"/>
                <TableColumn fx:id="colFree"  text="Free Space"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnScan"
                    text="Scan selected drive"
                    onAction="#onScan"/>
        </HBox>
    </bottom>
</BorderPane>
